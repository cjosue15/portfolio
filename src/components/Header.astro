---
const { title, route } = Astro.props;
---

<header>
  <a href={route} title={title}>{title}</a>
</header>

<style>
  header {
    padding-bottom: 1rem;
    text-align: right;
    max-width: 700px;
    margin: 0 auto 1rem;
  }

  a {
    text-decoration: none;
    color: #000;
    font-size: 0.875rem;
  }

  a:hover {
    text-decoration: underline;
  }

  @media print {
    header {
      display: none;
    }
  }
</style>
