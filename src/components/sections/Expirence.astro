---
import Section from "@/components/Section.astro";

import { work } from "@/cv";
---

<Section title="Experiencia">
  <ul>
    {
      work.map(({ name, startDate, endDate, position, summary }) => {
        const startYear = new Date(startDate).getFullYear();
        const endYear =
          endDate !== null ? new Date(endDate).getFullYear() : "Presente";
        const years = `${startYear} - ${endYear}`;
        return (
          <li>
            <article>
              <header>
                <div>
                  <h3>{name}</h3>
                  <h4>{position}</h4>
                </div>
                <time>{years}</time>
              </header>

              <p>{summary}</p>
            </article>
          </li>
        );
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  article h3 {
    font-weight: 600;
    color: #111;
    font-size: 1rem;
    margin-bottom: 8px;
  }

  article h4 {
    font-size: 0.875rem;
    font-weight: 400;
    font-family:
      ui-monospace,
      SFMono-Regular,
      Menlo,
      Monaco,
      Consolas,
      Liberation Mono,
      Courier New,
      monospace;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 8px;
  }

  time {
    font-size: 0.875rem;
    color: #6b7280;
  }

  @media (width <= 700px) {
    time {
      text-align: right;
    }
  }
</style>
